
<% include ../partials/header %>

<div class="container">
	<div class="row">
			<h1 class="text-center">Edit your Comment</h1>
		<div style="width: 30%; margin: 25px auto;">
			
			
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" autofocus="autofocus">
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type="text" name="comment[author]" placeholder="Author">
				</div>				 -->
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a class="btn btn-default" href="/campgrounds">Back to the list</a>
		</div>
	</div>
</div>


<% include ../partials/footer %>